<UserControl x:Class="WypozyczalniaElektronarzedzi.WypozyczeniaSzukaj"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WypozyczalniaElektronarzedzi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#fff">
        <Label Content="Wypożyczenia" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Stretch" Margin="10,40,10,10" VerticalAlignment="Top" >
            <materialDesign:Chip x:Name="NieZwroconeChip" Content="Nie zwrócone"></materialDesign:Chip>
            
        </StackPanel>
        <materialDesign:Card
            Margin="10,40,10,10"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            ><StackPanel>
                <DataGrid x:Name="WypozyczeniaDG" Background="#fff" VerticalAlignment="Stretch" Margin="0,0,0,0" ></DataGrid>
            </StackPanel>
        </materialDesign:Card>
       

    </Grid>
</UserControl>
